<div class="container">
  <h1><%= @performance.user.name %></h1>
  <ul>
    <%= cl_image_tag @performance.photo, height: 300, width: 400, crop: :fill %>
    <li><%= @performance.location %></li>
    <li><%= @performance.start_time %></li>
    <li><%= @performance.end_time %></li>
    <li><%= @performance.description %></li>


    <%= form_tag contributions_path do %>
    <%= text_field :amount, :post %>
    <%= hidden_field_tag 'performance_id', @performance.id %>
    <%= submit_tag 'Contribute', class: 'btn btn-primary' %>
    <% end %>

  </ul>
  <%= link_to 'Back', performances_path %>
</div>
