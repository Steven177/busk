<div class="main-container">

  <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>">
</div>


  <%= form_tag performances_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Search by city"
    %>
  <% end %>


<div class="cards-container">
  <div class="row">

    <% @performances.each do |performance| %>
    <div class="col-xs-6 col-sm-3">
      <%= link_to performance_path(performance), class: 'link' do %>

      <% if performance.photo.file %>
      <!-- insert image -->
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%=cl_image_path performance.photo, width: 300, height: 200, crop: :fill %>');">
        <% else %>
        <!-- placeholder -->
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%=image_url("logo.png") %>');">
          <% end %>

          <div class="card-description">
            <h4> <%= performance.user.name %></h4>
            <h4><i class="fas fa-map-pin"> </i>  <%= performance.location %> </h4>
            <% start_time = performance.start_time %>
            <% end_time = performance.end_time %>
            <p class="card-time"> <%= start_time.strftime("%a %m/%d/%y")  %></p>
            <p class="card-time"> <%= start_time.strftime("%I %p")  %> - <%= end_time.strftime("%I %p")  %> </p>
          </div>
        </div>

      </div>

      <% end %>
      <% end %>
    </div>

  </div>

</div>
