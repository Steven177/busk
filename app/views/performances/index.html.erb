<div class="main-container">
  <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>">
</div>


<div class="cards-container">

  <div class="row">

    <%= form_tag performances_path, method: :get do %>
    <%= text_field_tag :query,
    params[:query],
    class: "form-control",
      params[:query],
      class: "form-control-index",
      placeholder: "Search by city"
      %>
      <% end %>
  </div>

      <h1>Performances (<%= @performances.length %>)</h1>
  <div class="performance">
  <h1>Performances (<%= @performances.length %>)</h1>
  </div>
      <div class="scrolling-wrapper">

        <% @performances.each do |performance| %>
          <%= link_to performance_path(performance) do %>

            <div class="card">
              <%= cl_image_tag performance.photo_url, height: 300, width: 350, crop: :fill %>

              <div class="card-description">
               <h2> <%= performance.user.name %></h2>
               <p><i class="fas fa-map-pin"></i> &nbsp; <%= performance.location %></p>
             </div>
           </div>

           <% end %>
      <% end %>
         </div>


 </div>
