<div class="main-container">
  <div
  id="map"
  style="width: 100%;
  height: 400px;"
  data-markers="<%= @markers.to_json %>">
</div>

<!-- Search bar -->
 <!-- <%= render "shared/searchbar" %> -->

<div class="cards-container">

  <div class="row">
    <div class="search-bar">
     <%= form_tag performances_path, method: :get do %>
     <%= text_field_tag :query,
     params[:query],
     class: "form-control",
      placeholder: "Search by city"
      %>
      <% end %>
    </div>
    <div class="performance">
      <h5> Explore beautiful artists in your area</h5>
    </div>
  </div>

 <!-- Slider main container -->
 <div class="swiper-container">
   <div class="swiper-wrapper">
     <% index = 0 %>
     <% @performances.each do |performance| %>
     <div class="swiper-slide" data-index=<%= index %>>
       <%= link_to performance_path(performance) do %>

       <div class="card" >
         <%= cl_image_tag performance.photo_url, height: 230, width: 350, crop: :fill %>

         <div class="card-description">
          <h2> <%= performance.user.name %></h2>
          <p><i class="fas fa-map-pin"></i> &nbsp; <%= performance.location %></p>
          <% start_time = performance.start_time %>
          <% end_time = performance.end_time %>
          <p class="card-time"> <%= start_time.strftime("%a %m/%d/%y")  %></p>
          <p class="card-time"> <%= start_time.strftime("%I %p")  %> - <%= end_time.strftime("%I %p")  %> </p>
        </div>
      </div>
      <% end %>
    </div>
    <% index += 1 %>
    <% end %>

   </div>
 </div>

</div>
