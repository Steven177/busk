<!-- Top Section: General Infos about the artist -->
<div class="container">
  <div class="row flex-align-center">
    <div class="col-xs-4">
      <div class="avatar-on-banner" style="background-image: url('<%= cl_image_path @user.avatar, crop: :fill %>')"></div>
    </div>
    <div class="col-xs-4">
        <p class='profile-artist-name'><%= @user.artist_name %></p>
    </div>
    <div class="col-xs-4">
        <!-- Contribution logic still unclear -->
        <button>Contribute</button>
    </div>
  </div>
</div>

<!-- Previous performances of tee artist -->
<!-- Implementation slider missing -->
<div class="container">
  <div class="row">

  <% @performances.each do |performance| %>
       <%= link_to performance_path(performance) do %>

       <div class="card">
         <div class="card-bg-img" style="background-image: url('<%= cl_image_path(performance.photo_url, crop: :fill) %>')"></div>

         <div class="card-description">
          <p><i class="fas fa-map-pin"></i> &nbsp; <i><%= performance.location %></i></p>
          <% start_time = performance.start_time %>
          <% end_time = performance.end_time %>
          <div class="card-time-container card-time">
            <p class="card-time"><i class="far fa-clock"></i> <strong><%= start_time.strftime("%a %m/%d/%y")  %></strong></p>
            <p class="card-time-grow"></p>
            <p class="card-time"><strong><%= start_time.strftime("%I %p") %> - <%= end_time.strftime("%I %p") %></strong></p>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>

    </div>
</div>

<!-- ------------- -->


  <% if @user.youtube != nil &&  @user.youtube != "" || @user.soundcloud != nil && @user.soundcloud != "" %>
  <div class="media-container">
    <% if @user.youtube != nil && @user.youtube != "" %>
    <p>Check me out on YouYube</p>
    <iframe src="<%= @user.youtube %>" frameborder="0"></iframe>
    <% end %>

    <% if @user.soundcloud != nil && @user.soundcloud != "" %>
    <p>Check me out on Soundcloud</p>
    <iframe src="<%= @user.soundcloud %>" frameborder="0"></iframe>
    <% end %>
  </div>
  <% end %>

  <br>

  <%= link_to 'Back', performances_path, class: 'btn btn-primary' %>
  <% if policy(@user).edit? %>
  <%= link_to 'Edit', edit_profile_path(@user), class: 'btn btn-success' %>
  <% end %>
</div>

