<div class="container">
  <h1>My Dashboard</h1>
  <%= link_to "Create a performance", new_performance_path, class: "btn btn-primary" %>
  <%= link_to "View Performances from other artists", performances_path, class: "btn btn-primary" %>
  <% @performances.each do |performance| %>
  <ul>
    <li>
      <%= cl_image_tag performance.photo_url, width: 400, crop: :fill %>
      <%= performance.location %>
      <%= performance.description %>
      <%= performance.start_time %>
      <%= performance.end_time %>
    </li>
  <% end %>
  </ul>
</div>
