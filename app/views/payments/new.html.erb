<div class="banner-half-page">

  <div class="performance-photo-bg" style="background-image: url(<%= cl_image_path @contribution.artist.avatar, crop: :fill %>)"></div>

  <p>Artist Name</p>
  <%= @contribution.artist.artist_name %>

  <p>Artist image</p>
  <%= cl_image_path @contribution.artist.avatar %>

</div>

<div class="container half-page">
  <h4>Review your Contribution</h4>
  <div class="icon-next-to-text">
    <i class="fas fa-hand-holding-usd icon-orange icon-padding"></i>
    <p>Amount: <%= humanized_money_with_symbol(@contribution.amount) %> </p>
  </div>
  <div class="icon-next-to-text">
    <i class="fas fa-envelope-open icon-orange icon-padding"></i>
    <p>Message: <%= @contribution.message %> </p>
  </div>


  <%= form_tag contribution_payments_path(@contribution) do %>
  <h4>Choose a payment method</h4>
  <div class="icon-next-to-text">

  <%= image_tag 'card.gif', class: 'icon-padding' %>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
  data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
  data-name="My Contribution"
  data-email="<%= current_user.email %>"
  data-description="Contribution to an artist"
  data-amount="<%= @contribution.amount_cents %>"
  data-currency="<%= @contribution.amount.currency %>">
</script>

<% end %>
</div>
