<div class="banner" style="background-image: linear-gradient(-190deg, rgba(76,51,35,-0.5) 0%, rgba(0,0,10, 0.5) 100%), url('<%= image_path 'banner.jpg' %>');">

  <div class="banner-content">
    <%= image_tag '', class: 'logo-img' %>
    <h1>Live performance now.</h1><br>
      <%= form_tag performances_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a movie"
        %>
      <% end %>
      <br>
    <%=link_to "Discover", performances_path, class: 'btn btn-primary' %>
  </div>

</div>
